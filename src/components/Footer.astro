---
interface Props {
    tik: string;
    image: string;  // Agregar la propiedad para la imagen
}
const { tik, image } = Astro.props;
---

<div class="main">
    <!-- Footer con imagen de fondo -->
    <footer class="footer">
        <div class="footer-left">
            <img src={image} alt="Logo" class="footer-image" />
        </div>
        <div class="footer-right">
            <h3>¡Síguenos en nuestras redes sociales!</h3>
            <div class="footer-links">
                <!-- Enlace a TikTok con el SVG del logo -->
                <a href={tik} target="_blank">
                    <img src="/tiktok.svg" alt="TikTok Logo" class="tiktok-logo" />
                    FinWise
                </a>
                <!-- Agregar más enlaces a redes sociales -->
                <a href="https://www.youtube.com" target="_blank">
                    <img src="/youtube.svg" alt="Youtube Logo" class="tiktok-logo" />
                    FinWise
                </a>
                                <!-- Agregar enlace a Quizziz -->
                <a href="https://quizizz.com/join/quiz/6731796de7603c7ab7be6c63/start?studentShare=true" target="_blank">
                    <img src="https://getlogovector.com/wp-content/uploads/2023/03/quizizz-logo-vector.png" alt="Quizziz Logo" class="tiktok-logo" />
                    Vamos a jugar.
                </a>

            </div>
        </div>
    </footer>
    <div class="copi">
        <p>© 2024 FinWise. Todos los derechos reservados.</p>
    </div>
</div>

<style>
    * {
        box-sizing: border-box;  /* Asegura que el padding y el margen no afecten el ancho total */
    }

    .main {
        width: 100%;
        color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        overflow-x: hidden;  /* Elimina el desplazamiento horizontal */
    }

    .interior {
        width: 100%;
        text-align: center;
        margin-bottom: 0;
    }
    .interior h2 {
        font-size: 2rem;
        margin-bottom: 0;
    }

    .copi p {
        font-size: 1.2rem;
        margin-top: 0;
        text-align: center;
        display: flex;
    }
/** Necesito que mi p del copi este en el centro de la pagina*/
    .copi p {
        width: 100%;
        color: white;
        padding: px 0;
        text-align: center;
        justify-content: center;
        align-items: center;

    }
    .copi {
        width: 100%;
        background-color: rgb(0, 0, 0);
        color: white;
        padding: px 0;
        text-align: center;
        justify-content: center;
        align-items: center;

    }

    footer.footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: rgb(0, 0, 0);
        width: 100%;
        padding: 120px 0 0 0; /* Espacio adicional para que se vea la onda */
        flex-wrap: wrap;
        background: url('/Fondo.png'); /* Imagen de fondo con ondas */
        background-size: cover;
        background-position: center;
    }

    .footer-left {
        width: 30%;
        display: flex;
        justify-content: center;
        margin-bottom: 10px;
    }

    .footer-right {
        width: 65%;
        display: flex;
        flex-direction: column;
        padding-right: 10%;
        margin-bottom: 10px;
    }

    .footer-right .footer-links {
        display: flex;
        margin-left: -20px;
    }

    .footer-left img {
        max-width: 100%;
        height: 20vh;
        border-radius: 10px;
    }

    .footer-right h3 {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .footer-links a {
        color: rgb(0, 0, 0);
        text-decoration: none;
        margin: 0 10px;
        font-size: 1.2rem;
        font-weight: bold;
        align-items: center;
    }

    .footer-links a:hover {
        color: #ffcc00;
    }

    .tiktok-logo {
        width: 25px;
        height: auto;
        margin-right: 10px;
    }

    /* Medios para pantallas pequeñas */
    @media (max-width: 768px) {
        .footer-left,
        .footer-right {
            width: 100%;
            text-align: center;
            padding-right: 0px;
        }

        .footer-right {
            order: 1;
            padding-top: 0px;

        }

        .footer-left {
            margin-bottom: 0;
        }

        .footer-right h3 {
            margin-top: 0;
        }

        .footer-left img {
            height: auto;
            max-height: 15vh;
            
        }

        .footer-links a {
            font-size: 1rem;
            text-align: center
        }

        .tiktok-logo {
            width: 20px;
        }
    }
</style>
