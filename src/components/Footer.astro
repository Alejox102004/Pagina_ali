---
interface Props {
    tik: string;
    image: string;  // Agregar la propiedad para la imagen
}
const { tik, image } = Astro.props;
---

<div class="main">
    <!-- Footer con imagen de fondo -->
    <footer class="footer">
        <div class="interior">
            <h2>Contactanos</h2>
        </div>
        <div class="footer-left">
            <img src={image} alt="Logo" class="footer-image" />
        </div>
        <div class="footer-right">
            <h3>Siguenos en nuestras redes sociales:</h3>
            <div class="footer-links">
                <!-- Enlace a TikTok con el SVG del logo -->
                <a href={tik} target="_blank">
                    <img src="/tiktok.svg" alt="TikTok Logo" class="tiktok-logo" />
                    FinWise
                </a>
            </div>
        </div>
    </footer>
</div>

<style>
    * {
        box-sizing: border-box;  /* Asegura que el padding y el margen no afecten el ancho total */
    }

    .main {
        width: 100%;
        color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        overflow-x: hidden;  /* Elimina el desplazamiento horizontal */
    }

    .interior {
        width: 100%;
        text-align: center;
        margin-bottom: 0;
    }
    .interior h2 {
        font-size: 2rem;
        margin-bottom: 0;
    }

    footer.footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: rgb(0, 0, 0);
        width: 100%;
        padding: 120px 0 0 0; /* Espacio adicional para que se vea la onda */
        flex-wrap: wrap;
        background: url('/Fondo.png'); /* Imagen de fondo con ondas */
        background-size: cover;
        background-position: center;
    }

    .footer-left {
        width: 30%;
        display: flex;
        justify-content: center;
        margin-bottom: 10px;
    }

    .footer-right {
        width: 60%;
        display: flex;
        flex-direction: column;
        padding-right: 10%;
        margin-bottom: 10px;
    }

    .footer-left img {
        max-width: 100%;
        height: 20vh;
        border-radius: 10px;
    }

    .footer-right h3 {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .footer-links a {
        color: rgb(0, 0, 0);
        text-decoration: none;
        margin: 0 10px;
        font-size: 1.2rem;
        font-weight: bold;
        align-items: center;
    }

    .footer-links a:hover {
        color: #ffcc00;
    }

    .tiktok-logo {
        width: 25px;
        height: auto;
        margin-right: 10px;
    }

    /* Medios para pantallas peque√±as */
    @media (max-width: 768px) {
        .footer-left,
        .footer-right {
            width: 100%;
            text-align: center;
            padding-right: ;
        }

        .footer-right {
            order: 1;
            padding-top: 20px;
        }

        .footer-left img {
            height: auto;
            max-height: 15vh;
        }

        .footer-links a {
            font-size: 1rem;
            text-align: center
        }

        .tiktok-logo {
            width: 20px;
        }
    }
</style>
