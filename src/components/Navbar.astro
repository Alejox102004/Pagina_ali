    <nav class="nav-bar__nav">
        <ul class="nav-links" id="navLinks">
            <li><a href="/">Inicio</a></li>
            <li><a href="/servicios">Aprende Con Nosotros</a></li>
            <li><a href="/about">Quienes Somos?</a></li>
        </ul>
    </nav>
</div>

<style>
/* Estilos originales */
.nav-bar {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    background-color: transparent;
    color: rgb(0, 0, 0);
    margin: auto;
    height: 15vh;
}

.menu-btn {
    font-size: 1.5rem;
    background: none;
    border: none;
    color: #000000;
    cursor: pointer;
    display: none; /* Oculto en pantallas grandes */
}

.nav-bar__nav {
    display: flex;
    justify-content: center;
    width: 100%;
}

.nav-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 2vh 20px;
    background-color: rgba(0, 4, 9, 0.6);
    border-radius: 20px;
    font-size: 20px;
}

.nav-bar__nav a {
    text-decoration: none;
    color: rgb(255, 255, 255);
    font-size: 20px;
    font-weight: bold;
}

.nav-bar__nav a:hover {
    color: #000000;
    transition: 0.5s;
    border-bottom: #000000 solid 1px;
    cursor: pointer;
}

.nav-bar__nav a.active {
    color: #000000; /* Color del hover */
    border-bottom: #000000 solid 1px; /* Estilo de borde del hover */
}

/* Responsive styles */
@media (max-width: 768px) {
    .menu-btn {
        display: block; /* Muestra el botón en pantallas pequeñas */
        border: black solid 1px;
        border-radius: 5px;
        margin: auto;
        text-align: center;
        justify-content: center;
        background-color: rgba(0, 0, 0);
        color: white;
        position: absolute;
    }

    .nav-bar__nav a:hover {
    color: #ffffff;
    transition: 0.5s;
    border-bottom: #000000 solid 1px;
    cursor: pointer;
}

.nav-bar__nav a.active {
    color: #ffffff; /* Color del hover */
    border-bottom: #ffffff solid 1px; /* Estilo de borde del hover */
}

    .nav-links {
        position: absolute;
        top: 10vh;
        margin: auto;
        width: 90%;
        margin-top: 10px;
        display: none; /* Oculta el menú en pantallas pequeñas hasta que se haga clic en el botón */
        flex-direction: column;
        background-color: rgba(0, 4, 9, 0.9);
        padding: 1rem;
        border-radius: 10px;
    }

    .nav-links.active {
        display: flex; /* Muestra el menú cuando se activa */
    }

    .nav-links li {
        margin: 10px 0;
    }
}
</style>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        document.querySelector(".menu-btn").addEventListener("click", toggleMenu);

        // Agrega la clase 'active' según la URL actual
        const navLinks = document.querySelectorAll(".nav-links a");
        const currentPath = window.location.pathname;

        navLinks.forEach(link => {
            if (link.getAttribute("href") === currentPath) {
                link.classList.add("active");
            }
        });
    });

    function toggleMenu() {
        const navLinks = document.getElementById("navLinks");
        navLinks.classList.toggle("active"); // Activa o desactiva la clase 'active'
    }
</script>
